/* pages/category/category.wxss */
.first-category{
  /* background-color: bisque; */
  width:80px;
  font-size: 28rpx;
  text-align: center;
  border: 1px solid #ccc;
}
.right-content {
  flex: 1;
  margin-right: 0;
  /* background-color: blueviolet; */
  /* overflow: auto; 如果右侧内容过多，显示滚动条 */
}
.second-category{
    /* background-color:#566fa1; */
    padding-left:20rpx;
    font-size:28rpx;
}
.category-title{
    margin:10rpx 0;
    display: block;
    font-weight: bold;
    /* background-color: azure; */
}
.product-block {
  border: 1px solid #ccc; /* 商品块的边框样式 */
  margin-bottom: 10px; /* 商品块之间的间距 */
  margin-right:15px;
  padding: 10px; /* 商品块的内边距 */
}
.product-image {
  width: 100px; /* 商品图片的宽度 */
  height: 100px; /* 商品图片的高度 */
  margin-bottom: 5px; /* 图片与其他信息之间的间距 */
}
.product-name {
  font-weight: bold; /* 商品名称加粗 */
}
.product-price {
  color: #FF0000; /* 商品价格文本颜色 */
}
.product-desc {
  margin-top: 5px; /* 商品描述与价格之间的间距 */
}
.product-quantity {
  color: #666666; /* 商品数量文本颜色 */
}

.category-name{
    color:#999;
}
.flex-wrp{
    display: flex;
}
.category-item{
    height: 50px;
    line-height: 50px;
    border-bottom:1px solid #ddd;
}
.category-item:last-chid{
    border-bottom: 0;
}
.category-item.current{
    color:#cc0000;
}