/*头部图片大小*/
.userimage image{
  width: 384px;
  height: 150px;
}
/*分类*/
.index-nav {
  height: 60px;
  /*background: red;*/
  display: flex;
  flex-direction: row;
  /*align-items: center;*/
  background-color: #fff;
  color: #646464;
  text-align: center;
  /*设置下边框颜色*/
  border-bottom: 1px solid #888;
}

.index-nav view {
  flex: 1;
  flex-direction: column;
  border-right: 1px solid #f2f2f2;
}

.index-nav image {
  width: 28px;
  height: 28px;
}

.index-nav text {
  font-size: 15px;
}

/*内容*/
